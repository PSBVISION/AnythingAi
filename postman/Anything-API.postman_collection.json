{
	"info": {
		"_postman_id": "anything-api-collection",
		"name": "Anything.ai API",
		"description": "API collection for Anything.ai - Auth & Task Management Application\n\n## Setup\n1. Set the `baseUrl` variable to your backend URL (default: http://localhost:5000)\n2. Use the Signup or Login endpoints to get a token\n3. The token will be automatically saved to the `token` variable\n4. All protected endpoints will use the token automatically",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:5000",
			"type": "string"
		},
		{
			"key": "token",
			"value": "",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Health Check",
			"item": [
				{
					"name": "Health Check",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/health",
							"host": ["{{baseUrl}}"],
							"path": ["api", "health"]
						},
						"description": "Check if the server is running"
					},
					"response": []
				}
			]
		},
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Signup",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    var jsonData = pm.response.json();",
									"    pm.collectionVariables.set('token', jsonData.data.token);",
									"    console.log('Token saved to collection variable');",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"Test User\",\n    \"email\": \"test@example.com\",\n    \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/v1/auth/signup",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "auth", "signup"]
						},
						"description": "Register a new user account"
					},
					"response": []
				},
				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    pm.collectionVariables.set('token', jsonData.data.token);",
									"    console.log('Token saved to collection variable');",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"test@example.com\",\n    \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/v1/auth/login",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "auth", "login"]
						},
						"description": "Login with email and password"
					},
					"response": []
				},
				{
					"name": "Change Password",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"currentPassword\": \"password123\",\n    \"newPassword\": \"newpassword123\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/v1/auth/password",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "auth", "password"]
						},
						"description": "Change user password (requires authentication)"
					},
					"response": []
				}
			]
		},
		{
			"name": "Profile",
			"item": [
				{
					"name": "Get Profile",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/v1/me",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "me"]
						},
						"description": "Get current user profile"
					},
					"response": []
				},
				{
					"name": "Update Profile",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"Updated Name\",\n    \"email\": \"updated@example.com\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/v1/me",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "me"]
						},
						"description": "Update user profile (name and/or email)"
					},
					"response": []
				}
			]
		},
		{
			"name": "Tasks",
			"item": [
				{
					"name": "Get All Tasks",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/v1/tasks",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "tasks"]
						},
						"description": "Get all tasks for the authenticated user"
					},
					"response": []
				},
				{
					"name": "Get Tasks with Filters",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/v1/tasks?status=pending&priority=high&search=important",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "tasks"],
							"query": [
								{
									"key": "status",
									"value": "pending",
									"description": "Filter by status: pending, in-progress, completed"
								},
								{
									"key": "priority",
									"value": "high",
									"description": "Filter by priority: low, medium, high"
								},
								{
									"key": "search",
									"value": "important",
									"description": "Search in title and description"
								}
							]
						},
						"description": "Get tasks with search and filter options"
					},
					"response": []
				},
				{
					"name": "Get Single Task",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/v1/tasks/:id",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "tasks", ":id"],
							"variable": [
								{
									"key": "id",
									"value": "TASK_ID_HERE",
									"description": "The MongoDB ObjectId of the task"
								}
							]
						},
						"description": "Get a single task by ID"
					},
					"response": []
				},
				{
					"name": "Create Task",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"title\": \"Complete project documentation\",\n    \"description\": \"Write comprehensive README and API docs\",\n    \"status\": \"pending\",\n    \"priority\": \"high\",\n    \"dueDate\": \"2026-02-10\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/v1/tasks",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "tasks"]
						},
						"description": "Create a new task"
					},
					"response": []
				},
				{
					"name": "Update Task",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"title\": \"Updated task title\",\n    \"status\": \"in-progress\",\n    \"priority\": \"medium\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/v1/tasks/:id",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "tasks", ":id"],
							"variable": [
								{
									"key": "id",
									"value": "TASK_ID_HERE",
									"description": "The MongoDB ObjectId of the task"
								}
							]
						},
						"description": "Update an existing task"
					},
					"response": []
				},
				{
					"name": "Delete Task",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/v1/tasks/:id",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "tasks", ":id"],
							"variable": [
								{
									"key": "id",
									"value": "TASK_ID_HERE",
									"description": "The MongoDB ObjectId of the task"
								}
							]
						},
						"description": "Delete a task by ID"
					},
					"response": []
				}
			]
		}
	]
}
